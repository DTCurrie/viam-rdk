{
  "extends": "@viamrobotics/typescript-config/base.json",
  "compilerOptions": {
    // Export options
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "noPropertyAccessFromIndexSignature": false,
    "exactOptionalPropertyTypes": false
  },
  "include": [
    ".eslintrc.cjs",
    ".prettierrc.cjs",
    "postcss.config.js",
    "svelte.config.js",
    "tailwind.config.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.svelte"
  ]
}
